{
  "name": "Crazy shortcuts",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension helps you to shop in twitter directly, by adding a buy button near a tweet.",
  "homepage_url": "http://praneshravi.in",
  "default_locale": "en",
  "icons": {
    "16": "src/img/icon128.png",
    "48": "src/img/icon128.png",
    "128": "src/img/icon128.png"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "notifications",
    "tabs",
    "geolocation",
    "http://*/"
  ],
  "background": {
    "persistent": false,
    "scripts": ["src/background.js"]
  },
  "browser_action": {
    "default_title": "Crazy Shortcuts",
    "default_popup": "src/index.html",
    "default_icon"   :  "src/img/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "/src/jquery.js",
        "/src/inject.js"
      ]
    }
  ]
}
